{
  "env": {
    "MAX_MCP_OUTPUT_TOKENS": "100000"
  },
  "permissions": {
    "allow": [
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(source:*)",
      "Bash(find:*)",
      "Bash(fd:*)",
      "Bash(mv:*)",
      "Bash(mkdir:*)",
      "Bash(tree:*)",
      "Bash(ruff:*)",
      "Bash(touch:*)",
      "Bash(chmod:*)",
      "Bash(cat:*)",
      "Bash(ruff check:*)",
      "Bash(pnpm:*)",
      "Bash(python:*)",
      "WebFetch(domain:*)",
      "Bash(gh issue view:*)",
      "WebFetch(domain:docs.anthropic.com)"
    ],
    "deny": []
  },
  "statusLine": {
    "type": "command",
    "command": "bash .claude/statusline.sh",
    "padding": 0
  }
}
